<%- include('./partials/head.ejs') %>

  <main class="__homepage">
    <div class="row">
      <div class="col-sm-12 col-md-6 __left">
        <section class="__title_holder">
          <h1>Welkom bij de</h1>
          <h1>Portfolio generator</h1>
          <h1>Van CMD Amsterdam</h1>
        </section>
      </div>
      <div class="col-sm-12 col-md-6 __right">
        <div class="__form_wrapper">
          <h2>Login om te beginnen</h2>
          <form class="__accountForm" method="post">
            <div class="form-group">
              <input type="email" class="form-control" name="mail" aria-describedby="E-mailadres" placeholder="Voer je e-mailadres in*">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Voer je wachtwoord in*">
            </div>
            <a href="/account/register" class="btn btn-primary btn-orange">Registreren</a>
            <button type="submit" class="btn btn-primary btn-orange">Inloggen</button>
          </form>
        </div>
      </div>
    </div>
  </main>

